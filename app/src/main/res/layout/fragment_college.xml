<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <first.net.liteapp.view.TitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isShowSearch="true"
        app:title="@string/header_college"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/py198"
        android:background="@color/color_f1f1f1">

        <TextView
            android:id="@+id/tv_new"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawablePadding="@dimen/py10"
            android:drawableTop="@mipmap/college_new"
            android:gravity="center_horizontal"
            android:text="@string/college_new"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_lite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawablePadding="@dimen/py10"
            android:drawableTop="@mipmap/college_lite"
            android:gravity="center_horizontal"
            android:text="@string/college_lite"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawablePadding="@dimen/py10"
            android:drawableTop="@mipmap/college_data"
            android:gravity="center_horizontal"
            android:text="@string/college_data"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_law"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawablePadding="@dimen/py10"
            android:drawableTop="@mipmap/college_law"
            android:gravity="center_horizontal"
            android:text="@string/college_law"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px1"
                android:background="@color/color_line" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/py120"
                android:gravity="center_vertical">
                
                <View
                    android:layout_width="@dimen/px10"
                    android:layout_height="@dimen/px40"
                    android:background="@color/color_f58585"
                    android:layout_marginLeft="@dimen/px40"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/px15"
                    android:text="@string/college_onlite"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px1"
                android:background="@color/color_line" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_onlite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px1"
                android:background="@color/color_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/py120"
                android:gravity="center_vertical">

                <View
                    android:layout_width="@dimen/px10"
                    android:layout_height="@dimen/px40"
                    android:background="@color/color_f58585"
                    android:layout_marginLeft="@dimen/px40"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/px15"
                    android:text="@string/college_prelite"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px1"
                android:background="@color/color_line" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_prelite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px1"
                android:background="@color/color_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/py120"
                android:gravity="center_vertical">

                <View
                    android:layout_width="@dimen/px10"
                    android:layout_height="@dimen/px40"
                    android:background="@color/color_f58585"
                    android:layout_marginLeft="@dimen/px40"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/px15"
                    android:text="@string/college_beflite"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px1"
                android:background="@color/color_line" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_beflite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>