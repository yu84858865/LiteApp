<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="@dimen/py45"
    android:paddingBottom="@dimen/py45"
    android:paddingLeft="@dimen/py30"
    android:paddingRight="@dimen/py30">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/py254"
        android:layout_height="@dimen/py200"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/py40">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:textColor="@color/color_333333"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_alignParentTop="true"/>
        
        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/college_watch"
            android:drawablePadding="@dimen/px20"
            android:textSize="14sp"
            android:textColor="@color/color_999999"
            android:layout_alignParentBottom="true"/>



    </RelativeLayout>


</LinearLayout>