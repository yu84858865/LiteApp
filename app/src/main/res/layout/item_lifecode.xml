<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/py30"
    android:paddingRight="@dimen/py30"
    android:paddingBottom="@dimen/py35">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/py25">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/py10"
            android:paddingRight="@dimen/py10">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="福利大赠送"
                android:textColor="@color/color_333333"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/py10"
                android:text="培训课程"
                android:textColor="@color/color_999999"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="@dimen/py450"
            android:layout_height="@dimen/py280"
            android:scaleType="centerCrop" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/py20"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/join_pay"
            android:drawablePadding="@dimen/py5"
            android:gravity="bottom"
            android:textColor="@color/color_f58585"
            android:textSize="14sp"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="@dimen/py450"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:drawableLeft="@mipmap/college_time"
            android:drawablePadding="@dimen/py20"
            android:text="2018/1/1至2018/2/1"
            android:textColor="@color/color_999999"
            android:textSize="12sp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


</LinearLayout>