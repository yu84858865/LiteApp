<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="first.net.liteapp.activity.MainActivity"
    android:orientation="vertical">

    <first.net.liteapp.view.TitleView
        android:id="@+id/cus_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tlyt_tab"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="#f2f7f8"
        app:tabIndicatorColor="#ff5500"
        app:tabIndicatorHeight="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"/>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/vp_container"/>

    <Button
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_height="42dp"
        android:id="@+id/btn_start"
        android:text="开启直播"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/btn_start">

        <Button
            android:id="@+id/btn_watch"
            android:layout_width="100dp"
            android:layout_height="42dp"
            android:padding="5dp"
            android:text="观看直播"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp" />

        <EditText
            android:id="@+id/et_roomid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:background="@mipmap/input_box"
            android:layout_marginRight="5dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textColorHint="#3f000000"
            android:layout_toLeftOf="@+id/btn_watch"/>
    </RelativeLayout>


</LinearLayout>
