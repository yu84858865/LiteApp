<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="@dimen/py45"
    android:paddingBottom="@dimen/py45"
    android:paddingLeft="@dimen/py20"
    android:paddingRight="@dimen/py20">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/py175"
        android:layout_height="@dimen/py170"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/py40">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:textColor="@color/color_333333"/>
        
        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/py5"
            android:drawableLeft="@mipmap/college_watch"
            android:drawablePadding="@dimen/px18"
            android:textSize="14sp"
            android:textColor="@color/color_999999"/>



    </LinearLayout>


</LinearLayout>