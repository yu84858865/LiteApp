<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <first.net.liteapp.view.TitleView
        android:id="@+id/cus_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isShowBack="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cus_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/py160">

            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/py540"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/py160"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="@dimen/py30"
                android:paddingRight="@dimen/py30"
                android:textColor="@color/color_333333"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/py1"
                android:background="@color/color_line" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="@dimen/py140"
                android:paddingLeft="@dimen/py30"
                android:paddingRight="@dimen/py30"
                android:textColor="@color/color_f58585"
                android:textSize="18sp"
                android:gravity="center_vertical"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/py20"
                android:background="@color/color_f1f1f1" />

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="match_parent"
                android:layout_height="@dimen/py140"
                android:drawableLeft="@mipmap/campaign_author"
                android:drawablePadding="@dimen/py20"
                android:paddingLeft="@dimen/py30"
                android:paddingRight="@dimen/py30"
                android:textColor="@color/color_333333"
                android:textSize="14sp"
                android:gravity="center_vertical"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/py1"
                android:background="@color/color_line" />

            <TextView
                android:id="@+id/tv_person"
                android:layout_width="match_parent"
                android:layout_height="@dimen/py140"
                android:drawableLeft="@mipmap/campaign_person"
                android:drawablePadding="@dimen/py20"
                android:paddingLeft="@dimen/py30"
                android:paddingRight="@dimen/py30"
                android:textColor="@color/color_333333"
                android:textSize="14sp"
                android:gravity="center_vertical"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/py1"
                android:background="@color/color_line" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/py140"
                android:drawableLeft="@mipmap/college_time"
                android:drawablePadding="@dimen/py20"
                android:paddingLeft="@dimen/py30"
                android:paddingRight="@dimen/py30"
                android:textColor="@color/color_333333"
                android:textSize="14sp"
                android:gravity="center_vertical"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/py1"
                android:background="@color/color_line" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="@dimen/py140"
                android:drawableLeft="@mipmap/campaign_location"
                android:drawablePadding="@dimen/py20"
                android:paddingLeft="@dimen/py30"
                android:paddingRight="@dimen/py30"
                android:textColor="@color/color_333333"
                android:textSize="14sp"
                android:gravity="center_vertical"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/py20"
                android:background="@color/color_f1f1f1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/py160"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/py30"
                android:paddingRight="@dimen/py30"
                android:gravity="center_vertical">

                <View
                    android:layout_width="@dimen/py15"
                    android:layout_height="@dimen/py60"
                    android:background="@color/color_f58585" />

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/py20"
                    android:textColor="@color/color_333333"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/py1"
                android:background="@color/color_line" />

            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="WebViewLayout"
                android:paddingTop="@dimen/py30"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/py160"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_f7af30"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_interested"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/be_interested" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/py5"
                android:layout_height="@dimen/py40"
                android:background="@color/color_ffffff"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/comment" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/py5"
                android:layout_height="@dimen/py40"
                android:background="@color/color_ffffff"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/share" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/py396"
            android:layout_height="match_parent"
            android:background="@color/color_f58585">
            <TextView
                android:id="@+id/tv_attend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/color_ffffff"
                android:textSize="19sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>